# Financial Modeling Prep API (Required for data)
FMP_API_KEY=your_fmp_api_key_here

# =============================================================================
# LLM Provider Selection
# =============================================================================
# Choose one: anthropic, openai, ollama, gemini
LLM_PROVIDER=openai

# Anthropic API (for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API (for GPT-4o models)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Ollama (local models - no API key needed)
OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# Model Configuration by Provider
# =============================================================================
# Anthropic models
ANTHROPIC_DEFAULT_MODEL=claude-sonnet-4-20250514
ANTHROPIC_FAST_MODEL=claude-3-haiku-20240307
ANTHROPIC_ADVANCED_MODEL=claude-opus-4-20250514

# OpenAI models
OPENAI_DEFAULT_MODEL=gpt-4o
OPENAI_FAST_MODEL=gpt-4o-mini
OPENAI_ADVANCED_MODEL=gpt-4o

# Ollama models (must be pulled first: ollama pull llama3.1:8b)
OLLAMA_DEFAULT_MODEL=llama3.1:8b
OLLAMA_FAST_MODEL=llama3.1:8b
OLLAMA_ADVANCED_MODEL=llama3.1:70b

# Gemini models
GEMINI_DEFAULT_MODEL=gemini-1.5-pro
GEMINI_FAST_MODEL=gemini-1.5-flash
GEMINI_ADVANCED_MODEL=gemini-1.5-pro

# =============================================================================
# Optional Data Sources
# =============================================================================
# News API (for enhanced news coverage)
NEWS_API_KEY=your_newsapi_key_here

# Reddit API (Optional - now paid since 2023)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=SP500ResearchAgent/1.0

# X/Twitter API (Optional - for social sentiment)
X_BEARER_TOKEN=your_x_bearer_token

# =============================================================================
# System Configuration
# =============================================================================
# Rate Limiting
FMP_REQUESTS_PER_MINUTE=300
ANTHROPIC_REQUESTS_PER_MINUTE=50

# Output Configuration
REPORTS_OUTPUT_DIR=reports/output
CACHE_DIR=data/cache
CACHE_EXPIRY_HOURS=24

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/research_agent.log
